{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": [
      "env.d.ts",
      "src/**/*",
      "src/**/*.vue",
    ],
    "exclude": ["src/**/__tests__/*"],
    "compilerOptions": {
      "composite": true,
      "baseUrl": ".",
      "paths": {
        "utils": ["./src/utils/index.ts"],
        "comp": ["./src/components/index.ts"],
        "@/*": ["./src/*"],
      }
    }
  }
  